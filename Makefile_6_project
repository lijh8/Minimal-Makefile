Project with recursive makefile

$ pwd
/path/to/myapp/src
$ ls
Makefile  foo  main
$ tree
.
├── foo
│   ├── foo.c
│   ├── foo.h
│   └── Makefile
├── main
│   ├── main.c
│   └── Makefile
└── Makefile

$

# top-level makefile

$ cat Makefile

all : main #foo
main : #foo

# 1. With .ONESHELL, all command lines in a recipe are treated as one unit;
#   the prefixes @, -, and + apply only to the first command line of the recipe.
# 2. line continuation backslash \ is unnecessary,
#   all command lines in a recipe is passed to a single shell invocation.

.ONESHELL:

foo :
  @$(MAKE) -C $@
  @cp $@/$@ $@/lib$@.so
main :
  @$(MAKE) -C $@ ENABLE_SANITIZERS=$(ENABLE_SANITIZERS)

clean :
  @for dir in main #foo
  do
          $(MAKE) -C $$dir $@
  done
.PHONY : all clean main #foo

# $ make ENABLE_SANITIZERS=ON
ENABLE_SANITIZERS ?= OFF # default value when not defined
$

# sub-directory makefiles

$ cat foo/Makefile

# build dynamic library with -fPIC -shared
CFLAGS   = -fPIC -g # -O3 # CXXFLAGS for .cpp
CPPFLAGS = -MMD -MP # -I../foo -DNDEBUG
LDFLAGS  = -shared # -L../foo -static
LDLIBS   = # -lfoo
#CC      = $(CXX) # link with CXX for .cpp

# target name is basename of one of the source files
foo: $(patsubst %.c,%.o,$(wildcard *.c)) # .cpp
-include *.d
clean: ; $(RM) *.o *.d foo
.PHONY: clean

# $ make ENABLE_SANITIZERS=ON
ENABLE_SANITIZERS ?= OFF # default value when not defined
ifeq ($(ENABLE_SANITIZERS),ON)
  CFLAGS  += -g -fsanitize=address,undefined # CXXFLAGS for .cpp
  LDFLAGS +=    -fsanitize=address,undefined
endif
$

$ cat main/Makefile

# build dynamic library with -fPIC -shared
CFLAGS   = -g # -O3 -fPIC # CXXFLAGS for .cpp
CPPFLAGS = -MMD -MP # -I../foo # -DNDEBUG
LDFLAGS  = # -L../foo # -shared -static
LDLIBS   = # -lfoo
#CC      = $(CXX) # link with CXX for .cpp

# target name is basename of one of the source files
main: $(patsubst %.c,%.o,$(wildcard *.c)) # .cpp
-include *.d
clean: ; $(RM) *.o *.d main
.PHONY: clean

# $ make ENABLE_SANITIZERS=ON
ENABLE_SANITIZERS ?= OFF # default value when not defined
ifeq ($(ENABLE_SANITIZERS),ON)
  CFLAGS  += -g -fsanitize=address,undefined # CXXFLAGS for .cpp
  LDFLAGS +=    -fsanitize=address,undefined
endif

LDFLAGS += -Wl,-rpath,'$$ORIGIN/../foo:$$ORIGIN/../lib'
$


$ cat foo/foo.c
#include <limits.h>
#include <stdbool.h>
#include "foo.h"

bool add(int a, int b, int *result)
{
  // if (b < 0 && a < INT_MIN - b || b > 0 && a > INT_MAX - b)
  //     return false;

  *result = a + b; // overflow will be reported by sanitizers
  return true;
}
$

$ cat foo/foo.h
#ifndef foo_h
#define foo_h

#include <stdbool.h>

bool add(int a, int b, int *result);

#endif
$

$ cat main/main.c
#include <stdio.h>
#include <limits.h>
#include <stdbool.h>
// #include "foo.h"

int main()
{
  int sum;
  int a = INT_MAX;
  int b = INT_MAX;
  // bool ret = add(a, b, &sum);
}
$


