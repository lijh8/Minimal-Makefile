$ cat v1
LIBDIRS = bar foo
MAINDIRS = main1 main2

all : $(LIBDIRS) $(MAINDIRS)
foo : bar
main1 : foo
main2 : foo

$(MAINDIRS) : $(LIBDIRS)
$(LIBDIRS) :
	$(MAKE) -C $@
	cp $@/$@ $@/lib$@.so
$(MAINDIRS) :
	$(MAKE) -C $@
clean :
	for dir in $(LIBDIRS) $(MAINDIRS); do \
		$(MAKE) -C $$dir $@; \
	done
.PHONY : $(LIBDIRS) $(MAINDIRS) all clean
$

$ cat v2
SUBDIRS = bar foo main
subdirs : $(SUBDIRS)
$(SUBDIRS) :
	make -C $@
	cp $@/$@ $@/lib$@.so
clean :
	for dir in $(SUBDIRS); do \
		make -C $$dir $@; \
	done
.PHONY : $(SUBDIRS) subdirs clean

main :
	make -C $@

main : foo
foo : bar
$
