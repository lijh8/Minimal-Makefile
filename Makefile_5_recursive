$ cat Makefile
# make shared object with semantic version: major.minor.patch
# $(call mksoname,$@,1.2.3)
define mksoname # target,semver
        $(eval soname = lib$(1).so.$(firstword $(subst ., ,$(2))))
        $(MAKE) -C $(1) soname=$(soname)
        cp $(1)/$(1) $(1)/lib$(1).so.$(2)
        ln -fs lib$(1).so.$(2) $(1)/$(soname)
        ln -fs $(soname) $(1)/lib$(1).so
endef

all: main foo
main: foo

# 1. With .ONESHELL, all command lines in a recipe are treated as one unit;
#   the prefixes @, -, and + apply only to the first command line of the recipe.
# 2. line continuation backslash \ is unnecessary,
#   all command lines in a recipe is passed to a single shell invocation.

.ONESHELL:

# all sub-directory targets should be phony
.PHONY: all clean install main foo

foo:
        @$(call mksoname,$@,1.2.3)

main:
        @$(MAKE) -C $@

clean:
        @for dir in main foo
        do
                $(MAKE) -C $$dir $@
        done

prefix ?= /usr/local
bindir = $(DESTDIR)$(prefix)/bin
libdir = $(DESTDIR)$(prefix)/lib
includedir = $(DESTDIR)$(prefix)/include

installdirs = $(bindir) \
        $(libdir) \
        $(includedir) \

$(installdirs): ; mkdir -p $@

# make DESTDIR=~/myapp prefix=/usr/local install
install: all | $(installdirs)
        cp main/main $(bindir)/
        cp -P foo/*.so* $(libdir)/
        cp foo/foo.h $(includedir)/
$
$
$ cat foo/Makefile
# build dynamic library with -fPIC -shared
CFLAGS   = -Wall -Wextra -fPIC # -g -O3 # CXXFLAGS for .cpp
CXXFLAGS = -Wall -Wextra -fPIC # -g -O3
CPPFLAGS = -MMD -MP # -I../foo -DNDEBUG
LDFLAGS  = -shared # -L../foo -static
LDLIBS   = # -lfoo
#CC      = $(CXX) # link with CXX for .cpp
LDFLAGS += -Wl,-soname,$(soname)

# make BUILD_TYPE=SANITIZE
# use release build for install by default
BUILD_TYPE ?= RELEASE
ifeq ($(BUILD_TYPE),SANITIZE)
    SANITIZE  = -fsanitize=address,undefined
    CFLAGS   += -g $(SANITIZE) # CXXFLAGS for .cpp
    CXXFLAGS += -g $(SANITIZE)
    LDFLAGS  += $(SANITIZE)
else ifeq ($(BUILD_TYPE),DEBUG)
    CFLAGS   += -g # CXXFLAGS for .cpp
    CXXFLAGS += -g
else ifeq ($(BUILD_TYPE),RELEASE)
    CFLAGS   += -O3 -DNDEBUG # CXXFLAGS for .cpp
    CXXFLAGS += -O3 -DNDEBUG
else
    $(error Unknown BUILD_TYPE: $(BUILD_TYPE). Use SANITIZE, DEBUG, or RELEASE)
endif

ext      = .c
ifneq ($(wildcard *.cpp),)
    CC   = $(CXX) # link with CXX for .cpp
    ext  = .cpp
endif
target   = foo

# target name is basename of one of the source files
$(target): $(patsubst %$(ext),%.o,$(wildcard *$(ext))) # .cpp
-include *.d
clean: ; rm -fr *.o *.d $(target)
.PHONY: clean
$
$
$ cat main/Makefile
# build dynamic library with -fPIC -shared
CFLAGS   = -Wall -Wextra # -g -O3 -fPIC # CXXFLAGS for .cpp
CXXFLAGS = -Wall -Wextra # -g -O3 -fPIC
CPPFLAGS = -MMD -MP -I../foo # -DNDEBUG
LDFLAGS  = -L../foo # -shared -static
LDLIBS   = -lfoo
#CC      = $(CXX) # link with CXX for .cpp
LDFLAGS += -Wl,-rpath,'$$ORIGIN/../foo:$$ORIGIN/../lib'

# make BUILD_TYPE=SANITIZE
# use release build for install by default
BUILD_TYPE ?= RELEASE
ifeq ($(BUILD_TYPE),SANITIZE)
    SANITIZE  = -fsanitize=address,undefined
    CFLAGS   += -g $(SANITIZE) # CXXFLAGS for .cpp
    CXXFLAGS += -g $(SANITIZE)
    LDFLAGS  += $(SANITIZE)
else ifeq ($(BUILD_TYPE),DEBUG)
    CFLAGS   += -g # CXXFLAGS for .cpp
    CXXFLAGS += -g
else ifeq ($(BUILD_TYPE),RELEASE)
    CFLAGS   += -O3 -DNDEBUG # CXXFLAGS for .cpp
    CXXFLAGS += -O3 -DNDEBUG
else
    $(error Unknown BUILD_TYPE: $(BUILD_TYPE). Use SANITIZE, DEBUG, or RELEASE)
endif

ext      = .c
ifneq ($(wildcard *.cpp),)
    CC   = $(CXX) # link with CXX for .cpp
    ext  = .cpp
endif
target   = main

# target name is basename of one of the source files
$(target): $(patsubst %$(ext),%.o,$(wildcard *$(ext))) # .cpp
-include *.d
clean: ; rm -fr *.o *.d $(target)
.PHONY: clean
$


